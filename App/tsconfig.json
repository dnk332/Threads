{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@services": ["src/services/*"],
      "@assets": ["src/assets/*"],
      "@components": ["src/components/index.ts"],
      "@screens": ["src/screens/index.ts"],
      "@themes/*": ["src/themes/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigation/*": ["src/navigation/*"],
      "@local_types/*": ["src/types/*"],
      "@locales": ["src/locales/*"],
      "@root": ["src/screens/Root/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@image": ["src/assets/image/*"],
      "@store": ["src/redux/store/index.ts"],
      "@selectors": ["src/redux/selectors/index.ts"],
      "@reducers": ["src/redux/reducers/index.ts"],
      "@actions": ["src/redux/actions/index.ts"],
      "@sagas": ["src/redux/sagas/index.ts"],
      "@sagaHelper": ["src/redux/sagaHelper/index.ts"],
      "@apis": ["src/api/index.ts"],
      "@navigators": ["src/navigation/NavigationService.ts"]
    },
    "target": "es5",
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": ["declarations.d.ts", "src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
